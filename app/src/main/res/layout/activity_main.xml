<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#202021">

    <TextView
        android:id="@+id/equation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#6d6d6e"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calcInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equation" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:backgroundTint="#000000"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/modulus"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:text="%"
            android:textSize="30sp"
            android:layout_margin="1dp"
            android:onClick="operations"
            />

        <Button
            android:id="@+id/clear"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="CE"
            android:layout_margin="1dp"
            android:onClick="clear"
            />

        <Button
            android:id="@+id/cancel"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="C"
            android:layout_margin="1dp"
            android:onClick="cancel"
            />

        <Button
            android:id="@+id/divid"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="รท"
            android:layout_margin="1dp"
            android:onClick="operations"
            />

        <Button
            android:id="@+id/seven"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="7"
            android:layout_margin="1dp"
            android:onClick="numbers"
            />

        <Button
            android:id="@+id/eight"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="8"
            android:layout_margin="1dp"
            android:onClick="numbers"
            />

        <Button
            android:id="@+id/nine"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="9"
            android:layout_margin="1dp"
            android:onClick="numbers"
            />

        <Button
            android:id="@+id/times"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:layout_margin="1dp"
            android:text="x"
            android:onClick="operations"
            />

        <Button
            android:id="@+id/four"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="4"
            android:layout_margin="1dp"
            android:onClick="numbers"
            />

        <Button
            android:id="@+id/five"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="5"
            android:layout_margin="1dp"
            android:onClick="numbers"
            />

        <Button
            android:id="@+id/six"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="6"
            android:layout_margin="1dp"
            android:onClick="numbers"
            />

        <Button
            android:id="@+id/subtract"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="-"
            android:layout_margin="1dp"
            android:onClick="operations"
            />

        <Button
            android:id="@+id/one"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="1"
            android:layout_margin="1dp"
            android:onClick="numbers"
            />

        <Button
            android:id="@+id/two"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="2"
            android:layout_margin="1dp"
            android:onClick="numbers"
            />

        <Button
            android:id="@+id/three"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="3"
            android:layout_margin="1dp"
            android:onClick="numbers"
            />

        <Button
            android:id="@+id/add"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="+"
            android:layout_margin="1dp"
            android:onClick="operations"
            />

        <Button
            android:id="@+id/negetive"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="+/-"
            android:layout_margin="1dp"
            android:onClick="numbers"
            />

        <Button
            android:id="@+id/zero"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="0"
            android:layout_margin="1dp"
            android:onClick="numbers"
            />

        <Button
            android:id="@+id/period"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="."
            android:layout_margin="1dp"
            android:onClick="numbers"
            />

        <Button
            android:id="@+id/equal"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:text="="
            android:layout_margin="1dp"
            android:onClick="equals"
            />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>